<mvc:View
xmlns="sap.m"
xmlns:mvc="sap.ui.core.mvc"
xmlns:f="sap.f"
height="100%"
displayBlock="true"
controllerName="lx.sapui5.demoapp.controller.App">
    <App>
        <pages>
            <Page title="Users List" class="sapUiResponsiveContentPadding">
                <VBox>                        
                    <List
                        id="usersList"
                        items="{/users}">
                        <headerToolbar>
                            <OverflowToolbar>
                                <content>
                                    <Title text="Users" level="H2" />
                                    <ToolbarSpacer />
                                    <Button text="Create" type="Transparent" press="onAddUserPress"/>
                                </content>
                            </OverflowToolbar>
                        </headerToolbar>
                        <StandardListItem
                            title="{name}"
                            description="{age}" />
                    </List>
                    </VBox>
            </Page>
        </pages>
    </App>
</mvc:View>