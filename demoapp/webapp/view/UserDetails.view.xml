<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    height="100%"
    displayBlock="true"
    controllerName="lx.sapui5.demoapp.controller.UserDetails">
    <Page title="{i18n>detailsPageTitle}" class="sapUiResponsiveContentPadding">
		<f:SimpleForm id="userDisplyForm"
			editable="false"
			layout="ResponsiveGridLayout"
			title="{i18n>formTitle}"
			labelSpanXL="3"
			labelSpanL="3"
			labelSpanM="3"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="4"
			emptySpanL="4"
			emptySpanM="4"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false" >
			<f:content>
				<Label labelFor="userName" text="{i18n>nameLbl}" />
				<Text id="userName" text="{name}" />
				<Label labelFor="age" text="{i18n>ageLbl}" />
				<Text  id= "age" text="{age}" />
				<Label labelFor="country" text="{i18n>countryLbl}" />
				<Text id="country" text="{country}" />
				<Label labelFor="city" text="{i18n>cityLbl}" />
				<Text id="city" text="{city}" />
			</f:content>
		</f:SimpleForm>
    </Page> 
</mvc:View>