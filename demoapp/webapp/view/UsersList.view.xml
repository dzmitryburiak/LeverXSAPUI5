<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    height="100%"
    displayBlock="true"
    controllerName="lx.sapui5.demoapp.controller.UsersList">
    <Page title="{i18n>listPageTitle}" class="sapUiResponsiveContentPadding">
        <VBox>                        
            <List
                id="usersList"
                mode="SingleSelectLeft"
                selectionChange="onUserSelectionChange"
                items="{/users}">
                <headerToolbar>
                    <OverflowToolbar>
                        <content>
                            <Title text="{i18n>tableTitle}" level="H2" />
                            <ToolbarSpacer />
                            <Button text="{i18n>createBtn}" type="Transparent" press="onAddUserPress"/>                                    
                            <Button text="{i18n>deleteBtn}" type="Transparent" enabled="{ui>/isUserSelected}" press="onDeleteUserPress"/>
                        </content>
                    </OverflowToolbar>
                </headerToolbar>
                <StandardListItem
                    title="{name}"
                    description="{age}"
                    type="Navigation"
                    press="onUserItemPress" />
            </List>
            </VBox>
    </Page>
</mvc:View>