<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:f="sap.ui.layout.form"
   xmlns:core="sap.ui.core" >
   <Dialog
      id="newUserDialog"
      title="New User"
      afterClose="onAfterCloseDialog">      
        <f:SimpleForm>
			<f:content>
				<Label labelFor="nameInput" text="Name"/>
                <Input id="nameInput" value="{/name}" required="true" class="sapUiTinyMarginBottom" />               
                <Label labelFor="ageInput" text="Age"/>    
                <Input id="ageInput" value="{/age}" required="true" class="sapUiMediumMarginBottom" />
			</f:content>
		</f:SimpleForm>
        <buttons>
            <Button text="Ok" type="Emphasized" press="onCreateUserPress" />
            <Button text="Cancel" press="onCancelPress" />
        </buttons>
   </Dialog>
</core:FragmentDefinition>