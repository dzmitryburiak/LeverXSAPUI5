<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
   <Dialog
      id="newUserDialog"
      class="sapUiResponsiveContentPadding"
      title="New User"
      afterClose="onAfterCloseDialog">
        <VBox>
            <Label labelFor="nameInput" text="Name"/>
            <Input id="nameInput" value="{/name}" width="250px" required="true" class="sapUiTinyMarginBottom" />               
            <Label labelFor="ageInput" text="Age"/>    
            <Input id="ageInput" value="{/age}" width="250px" required="true" class="sapUiMediumMarginBottom" />
        </VBox>
        <buttons>
            <Button text="Ok" type="Emphasized" press="onCreateUserPress" />
            <Button text="Cancel" press="onCancelPress" />
        </buttons>
   </Dialog>
</core:FragmentDefinition>